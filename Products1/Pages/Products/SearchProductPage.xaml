<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
			 x:Class="Products1.SearchProductPage"
			 Title="Buscar Producto">
	<ContentPage.Content>
		<ScrollView>
				<StackLayout Padding="10,30,10,10" Spacing="10">
					<ActivityIndicator x:Name="waitActivityIndicator"
							HorizontalOptions="Center"
							VerticalOptions="Center"/>
					<StackLayout Orientation="Horizontal">
					  	<Label Text="ID Producto:"
					  		HorizontalOptions="Start"
							VerticalOptions="Center"/>
						<Entry x:Name="productIDEntry"
							Keyboard="Numeric"
							Placeholder="ID Producto"
							HorizontalOptions="FillAndExpand"
							VerticalOptions="Center"/>
					 </StackLayout>
						  <Button x:Name="searchButton"
							Style="{StaticResource findButton}"
							HorizontalOptions="FillAndExpand"
							VerticalOptions="Center"/>				
				 </StackLayout>
		</ScrollView>
	</ContentPage.Content>
</ContentPage>
